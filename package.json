{
	"name": "telegramify-markdown",
	"version": "1.0.0",
	"description": "Convert markdown into Telegram-specific markdown",
	"type": "module",
	"main": "./dist/index.cjs",
	"module": "./dist/index.js",
	"files": ["README.md", "LICENSE", "dist"],
	"exports": {
		".": {
			"import": "./dist/index.js",
			"require": "./dist/index.cjs"
		}
	},
	"scripts": {
		"test": "NODE_OPTIONS=--experimental-vm-modules jest --coverage",
		"lint": "eslint",
		"build": "tsup",
		"semantic-release": "semantic-release",
		"prepare": "husky install",
		"codecov": "codecov"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/skoropadas/telegramify-markdown.git"
	},
	"keywords": ["telegram", "markdown", "telegramify", "parser", "remark", "unified"],
	"author": "Skoropad Aleksandr <alex@skoropad.dev>",
	"license": "MIT",
	"bugs": {
		"url": "https://github.com/skoropadas/telegramify-markdown/issues"
	},
	"homepage": "https://github.com/skoropadas/telegramify-markdown#readme",
	"dependencies": {
		"mdast-util-gfm-table": "^1.0.7",
		"mdast-util-to-markdown": "^1.5.0",
		"remark-gfm": "^3.0.1",
		"remark-parse": "^10.0.1",
		"remark-remove-comments": "^1.0.1",
		"remark-stringify": "^10.0.2",
		"unified": "^10.1.2",
		"unist-util-remove": "^3.1.1",
		"unist-util-visit": "^4.1.2"
	},
	"devDependencies": {
		"@commitlint/cli": "^17.4.4",
		"@commitlint/config-conventional": "^17.4.4",
		"codecov": "^3.8.3",
		"eslint": "^8.36.0",
		"husky": "^8.0.3",
		"jest": "^29.5.0",
		"lint-staged": "^13.2.0",
		"prettier": "2.8.4",
		"semantic-release": "^20.1.3",
		"tsup": "^6.6.3"
	},
	"packageManager": "npm@8.19.2",
	"lint-staged": {
		"*.{js,json,md}": ["prettier --write", "git add"],
		"*.{css,scss,less}": "stylelint --fix",
		"*.js": "eslint --cache --fix"
	},
	"prettier": {
		"printWidth": 120,
		"tabWidth": 4,
		"useTabs": true,
		"semi": true,
		"singleQuote": true,
		"trailingComma": "all",
		"bracketSpacing": false,
		"arrowParens": "avoid",
		"overrides": [
			{
				"files": "*.js",
				"options": {
					"parser": "babel"
				}
			},
			{
				"files": "*.md",
				"options": {
					"parser": "markdown"
				}
			},
			{
				"files": "*.json",
				"options": {
					"parser": "json"
				}
			}
		]
	},
	"eslintConfig": {
		"env": {
			"node": true,
			"es2021": true,
			"jasmine": true
		},
		"extends": "eslint:recommended",
		"parserOptions": {
			"ecmaVersion": 12,
			"sourceType": "module"
		},
		"rules": {}
	},
	"tsup": {
		"entry": ["index.js"],
		"format": ["cjs", "esm"],
		"minify": true,
		"clean": true,
		"sourcemap": true
	}
}
